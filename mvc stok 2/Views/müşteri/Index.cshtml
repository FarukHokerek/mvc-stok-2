@using mvc_stok_2.Models.Entity
@model List<TBLMUSTERILER>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_mainlayout.cshtml";
}
@using (Html.BeginForm("Index","müşteri",FormMethod.Get))
            {
                <p>
                    Aranacak Müşteri Adı: @Html.TextBox("p");
                    <input type="submit" value="ara"/>
                </p>
            }
<table class="table table-bordered">
    <tr>
        <th>MÜŞTERİ ID</th>
        <th>MÜŞTERİ AD</th>
        <th>MÜSTERİ SOYAD</th>
        <th>SİL</th>
        <th>GÜNCELLE</th>
        <th>Alert Sil butonu</th>

    </tr>
    <tbody>
        @foreach (var mus in Model)
        {
            <tr>
                <td>@mus.MUSTERIID</td>
                <td>@mus.MUSTERIAD</td>
                <td>@mus.MUSTERISOYAD</td>
                <td><a href="/Müşteri/SIL/@mus.MUSTERIID" class="btn btn-danger">SİL</a></td>
                <td><a href="/Müşteri/MusteriGetir/@mus.MUSTERIID" class="btn btn-success">GÜNCELLE</a></td>
                <td>@Html.ActionLink("SİL BUTONU", "SIL", new { id=mus.MUSTERIID }, new { @class = "btn btn-warning", onclick = "return confirm('Gerçekten Silmek ister misin')" }) </td>

            </tr>

        }
    </tbody>
</table>
<a href="/Müşteri/YeniMusteri/" class="btn btn-primary">YENİ MÜŞTERİ EKLE</a>
